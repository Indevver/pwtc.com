{% extends 'base.html.twig' %}
{% block content %}
    <section class="two-col-section">
        <div class="background"></div>
        <div class="row" data-equalizer data-equalize-on="medium">
            <article class="medium-8 large-9 columns content" data-equalizer-watch="">
                <h1>{{ SP.WordPress.title() }}</h1>
                {% if SP.ACF.get_field('format') == "meeting" %}
                    <a href="{{ SP.ACF.get_field('file').url }}" class="large primary button"><i class="fa fa-download"></i> Download Meeting Minutes</a>
                {% elseif SP.ACF.get_field('format') == "new" %}
                    <a href="{{ SP.ACF.get_field('file').url }}" class="large primary button"><i class="fa fa-download"></i> Download Newsletter</a>
                {% endif %}
                {{ SP.WordPress.content() }}
                {% if SP.ACF.get_field('format') == "gallery" %}
                    <div class="row small-up-1 medium-up-2 large-up-4">
                        {% for image in SP.ACF.get_field('images') %}
                            <div class="column">
                                <a href="{{ image.image.url }}" class="fancybox" rel="gallery"><img src="{{ image.image.sizes.teaser }}" alt=""></a>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </article>
            <div class="medium-4 large-3 columns sidebar" data-equalizer-watch="">
                {{ right_sidebar }}
            </div>
        </div>
    </section>
{% endblock %}
{% block footer %}
    {% include 'layout/footer.html.twig' %}
    {% include 'layout/copyright.html.twig' %}
{% endblock %}