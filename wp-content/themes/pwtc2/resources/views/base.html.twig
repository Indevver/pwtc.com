<html {{ site.language_attributes }} class="no-js">
<head>
    {% block meta %}
        <meta charset="{{ site.charset }}">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <meta name="viewport" content="height=device-height,width=device-width,initial-scale=1">
        <link rel="pingback" href="{{ site.pingback_url }}" />

        {% block seo %}
            {% block meta_title %}
                <title>
                    {% if post is defined and post.get_field('seo_title') %}
                        {{ post.get_field('seo_title') }}
                    {% elseif wp_title %}
                        {{ wp_title }} - {{ site.name }}
                    {% else %}
                        {{ site.name }}
                    {% endif %}
                </title>
            {% endblock %}
        {% endblock %}
    {% endblock %}

    {% block stylesheets %}
        {{ function('wp_head') }}
    {% endblock %}

    {% block header_scripts %}
        {% if scripts_head %}
            {{ scripts_head | raw }}
        {% endif %}
    {% endblock %}
</head>
<body class="{{ body_class }}">

{% block body %}
    {% block header %}
        {% include "layout/header.html.twig" %}
    {% endblock %}

    {% block content %}
        {% for row in post.meta('content_rows') %}
            {% include 'rows/'~row.acf_fc_layout~'.html.twig' %}
        {% else %}
            <section class="content">
                <div class="row column">
                    <h1>{{ post.title }}</h1>
                    {{ post.content }}
                </div>
            </section>
        {% endfor %}
    {% endblock %}

    {% block footer %}
        {% include "layout/footer.html.twig" %}
        {% include "partials/copyright.html.twig" %}
    {% endblock %}
{% endblock %}

{% block scroll %}
    <a class="scroll-top"><i class="fas fa-angle-up"></i></a>
{% endblock %}

{% block body_scripts %}
    {% if body_head %}
        {{ body_head | raw }}
    {% endif %}
{% endblock %}

{% block scripts %}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">    {{ function('wp_footer') }}
{% endblock %}
</body>
</html>
