{% extends 'base.html.twig' %}
{% block content %}
    <section class="three-col-section">
        <div class="background"></div>
        <div class="row" data-equalizer data-equalize-on="medium">
            <div class="small-12 medium-12 large-3 columns sidebar hide-for-small-only">
                {{ left_sidebar }}
            </div>
            <article class="small-12 medium-8 large-6 columns content">
                <h1>{{ post.title }}</h1>
                {{ post.content }}
            </article>
            <div class="small-12 medium-4 large-3 columns sidebar">
                {{ right_sidebar }}
            </div>
        </div>
    </section>
{% endblock %}
